<Window x:Class="Apollo.UsernamePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apollo Beta" Height="150" Width="300">
    <Grid Background="#FF4C4C4C">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Please enter your name:" Margin="0 0 0 10" Foreground="White"/>
            <TextBox x:Name="usernameTextBox" Width="200" Margin="0 0 0 10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Width="75" Margin="10" Click="OKButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
